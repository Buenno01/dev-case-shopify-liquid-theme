{% liquid
    assign blck = block.settings
    assign id = block.id
    assign text = blck.text
    assign additional_attributes = block.shopify_attributes
    assign tag = blck.tag
    assign text_size = blck.text_size
    assign inherit_text_color = blck.inherit_text_color
    if inherit_text_color
        assign text_color = blank
    else
        assign text_color = blck.text_color
    endif
    assign text_alignment = blck.text_alignment
    assign text_style = blck.text_style
    assign text_decoration = blck.text_decoration
    assign text_transform = blck.text_transform
    assign line_height = blck.line_height | append: '%'
    assign letter_spacing = blck.letter_spacing
    assign font_family = blck.font_family
    assign font_weight = blck.font_weight
    assign force_font_weight = blck.force_font_weight
    assign font_size_mobile = blck.font_size_mobile
    assign font_size_desktop = blck.font_size_desktop
    assign apply_gradient_to_bold_text = blck.apply_gradient_to_bold_text
    assign gradient_color = blck.gradient_color
%}

{% render 'text',
    id: id,
    text: text,
    additional_attributes: additional_attributes,
    tag: tag,
    text_size: text_size,
    text_color: text_color,
    text_alignment: text_alignment,
    text_style: text_style,
    text_decoration: text_decoration,
    text_transform: text_transform,
    line_height: line_height,
    letter_spacing: letter_spacing,
    font_family: font_family,
    font_weight: font_weight,
    force_font_weight: force_font_weight,
    font_size_mobile: font_size_mobile,
    font_size_desktop: font_size_desktop,
    apply_gradient_to_bold_text: apply_gradient_to_bold_text,
    gradient_color: gradient_color
%}
{% schema %}
{
