{% liquid
  assign id = block.id | default: section.id

  assign link = block.settings.link | default: '#'
  assign text = block.settings.text | default: 'Lorem Ipsum dolor sit amet'

  assign button_type = block.settings.button_type | default: 'primary'

  assign target = block.settings.target | default: false

  assign font_family = block.settings.font_family | default: 'var(--titillium-web)'

  assign width = block.settings.width | default: 'fit-content'
  assign width_mobile = block.settings.width_mobile | default: 'fit-content'
%}

{% render 'button',
  id: id,
  link: link,
  text: text,
  button_type: button_type,
  is_button: false,
  target: target,
  font_family: font_family,
  additional_attributes: block.shopify_attributes,
  width: width,
  width_mobile: width_mobile
%}

{% schema %}
{
  "name": "t:blocks.button.name",
  "tag": null,
  "settings": [
    {
        "type": "select",
        "id": "button_type",
        "label": "t:blocks.button.settings.button_type.label",
        "default": "primary",
        "options": [
            { "value": "primary", "label": "t:blocks.button.settings.button_type.options.primary.label" },
            { "value": "secondary", "label": "t:blocks.button.settings.button_type.options.secondary.label" },
            { "value": "tertiary", "label": "t:blocks.button.settings.button_type.options.tertiary.label" }
        ]
    },
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "t:blocks.button.settings.text.label",
      "default": "Lorem Ipsum"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:blocks.button.settings.link.label"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "t:blocks.button.settings.text_size.label",
      "default": "var(--font-size-body)",
      "options": [
        {
          "value": "var(--font-size-body)",
          "label": "t:blocks.button.settings.text_size.options.body.label"
        },
        {
          "value": "var(--font-size-body-large)",
          "label": "t:blocks.button.settings.text_size.options.body-lg.label"
        },
        {
          "value": "var(--font-size-heading-1)",
          "label": "t:blocks.button.settings.text_size.options.h1.label"
        },
        {  
          "value": "var(--font-size-heading-2)",
          "label": "t:blocks.button.settings.text_size.options.h2.label"
        },
        { 
          "value": "custom",
          "label": "t:blocks.button.settings.text_size.options.custom.label"
        }
      ]
    },
    {
      "type": "range",
      "id": "text_size_mobile",
      "label": "t:blocks.button.settings.text_size_mobile.label",
      "default": 12,
      "min": 8,
      "max": 40,
      "step": 2,
      "unit": "px",
      "visible_if": "{{ block.settings.text_size == 'custom' }}"
    },
    {
      "type": "range",
      "id": "text_size_desktop",
      "label": "t:blocks.button.settings.text_size_desktop.label",
      "default": 16,
      "min": 8,
      "max": 40,
      "step": 2,
      "unit": "px",
      "visible_if": "{{ block.settings.text_size == 'custom' }}"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "t:blocks.button.settings.font_family.label",
      "default": "var(--font-helvetica-neue)",
      "options": [
        {
          "value": "var(--font-helvetica-neue)",
          "label": "t:blocks.button.settings.font_family.options.helvetica_neue.label"
        },
        {
          "value": "var(--font-product-sans)",
          "label": "t:blocks.button.settings.font_family.options.product_sans.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:blocks.button.settings.header.width"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:blocks.button.settings.width.label",
      "default": "100%",
      "options": [
        { "value": "100%", "label": "t:blocks.button.settings.width.options.full.label" },
        { "value": "auto", "label": "t:blocks.button.settings.width.options.auto.label" },
        { "value": "fit-content", "label": "t:blocks.button.settings.width.options.fit-content.label" }
      ]
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:blocks.button.settings.width_mobile.label",
      "default": "100%",
      "options": [
        { "value": "100%", "label": "t:blocks.button.settings.width.options.full.label" },
        { "value": "auto", "label": "t:blocks.button.settings.width.options.auto.label" },
        { "value": "fit-content", "label": "t:blocks.button.settings.width.options.fit-content.label" }
      ]
    },
    {
      "type": "checkbox",
      "id": "target",
      "label": "t:blocks.button.settings.target.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:blocks.button.name"
    }
  ]
}
{% endschema %}
