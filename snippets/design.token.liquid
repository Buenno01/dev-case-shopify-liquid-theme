<style>
    :root {
        font-size: 10px;

        /* Container variable */
        --page-width: {{ settings.page_width_desktop |  divided_by: 1440 |  times: 100 }}vw;

        /* Font variables */
        --font-helvetica-neue: 'Helvetica Neue', sans-serif;
        --font-product-sans: 'Product Sans', sans-serif;

        /* Color variables */
        --color-background-primary: rgba(var(--rgba-background-primary));
        --color-background-secondary: rgba(var(--rgba-background-secondary));
        --color-background-tertiary: rgba(var(--rgba-background-tertiary));
        --color-background-invert: rgba(var(--rgba-background-invert));
        --color-accent-primary: rgba(var(--rgba-accent-primary));
        --color-accent-secondary: rgba(var(--rgba-accent-secondary));
        --color-accent-mute: rgba(var(--rgba-accent-mute));
        --color-surface-primary: rgba(var(--rgba-surface-primary));
        --color-text-heading-primary: rgba(var(--rgba-text-heading-primary));
        --color-text-heading-secondary: rgba(var(--rgba-text-heading-secondary));
        --color-text-heading-invert: rgba(var(--rgba-text-heading-invert));
        --color-text-body-primary: rgba(var(--rgba-text-body-primary));
        --color-text-body-secondary: rgba(var(--rgba-text-body-secondary));
        --color-text-body-invert: rgba(var(--rgba-text-body-invert));

        /* Font size variables */
        --font-size-heading-1: {% render 'design.clamp' with min: settings.heading_1_min, max: settings.heading_1_max %};
        --font-size-heading-2: {% render 'design.clamp' with min: settings.heading_2_min, max: settings.heading_2_max %};
        --font-size-body: {% render 'design.clamp' with min: settings.body_min, max: settings.body_max %};
        --font-size-body-large: {% render 'design.clamp' with min: settings.body_large_min, max: settings.body_large_max %};
    }

    @media (max-width: 768px) {
        :root {
            --page-width: {{ settings.page_width_mobile |  divided_by: 400 |  times: 100 }}vw;
        }
    }
</style>